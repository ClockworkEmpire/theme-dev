{% comment %}
  Hero section for homepage
  Displays a large banner with title, subtitle, and call-to-action
{% endcomment %}

<section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20 rounded-lg mb-12">
  <div class="text-center px-4">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">
      {{ section.settings.title }}{% if section.settings.title == 'Welcome' %} to {{ site.name }}{% endif %}
    </h1>

    {% if section.settings.subtitle %}
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        {{ section.settings.subtitle }}
      </p>
    {% endif %}

    {% if section.settings.button_text %}
      <a
        href="{{ section.settings.button_url | default: '#' }}"
        class="inline-block px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition shadow-lg"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Welcome"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Build something amazing with our platform."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "#"
    }
  ]
}
{% endschema %}
