{% comment %}
  Header section with navigation
  Settings allow customization of logo text and navigation links
{% endcomment %}

<header class="bg-white shadow-sm">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="text-xl font-bold text-gray-900">
        {{ section.settings.logo_text | default: site.name }}
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        {% assign nav_items = section.settings.nav_links | split: '|' %}
        {% for nav_item in nav_items %}
          {% assign parts = nav_item | split: ':' %}
          {% assign label = parts[0] | strip %}
          {% assign url = parts[1] | strip %}
          <a
            href="{{ url }}"
            class="text-gray-600 hover:text-gray-900 {% if request.path == url %}text-blue-600 font-medium{% endif %}"
          >
            {{ label }}
          </a>
        {% endfor %}
      </nav>

      <!-- Mobile menu button -->
      <button class="md:hidden p-2" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "info": "Leave blank to use site name"
    },
    {
      "type": "textarea",
      "id": "nav_links",
      "label": "Navigation Links",
      "info": "Format: Label:URL | Label:URL",
      "default": "Home:/ | Blog:/blog | Companies:/companies"
    }
  ]
}
{% endschema %}
