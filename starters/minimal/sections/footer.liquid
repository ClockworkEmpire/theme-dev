{% comment %}
  Footer section with customizable content
{% endcomment %}

<footer class="bg-gray-800 text-white mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="font-bold text-lg mb-4">{{ site.name }}</h3>
        <p class="text-gray-400">
          {{ section.settings.about_text | default: 'Welcome to our site.' }}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-bold text-lg mb-4">Quick Links</h3>
        <nav class="flex flex-col gap-2">
          {% assign footer_links = section.settings.footer_links | split: '|' %}
          {% for link in footer_links %}
            {% assign parts = link | split: ':' %}
            {% assign label = parts[0] | strip %}
            {% assign url = parts[1] | strip %}
            <a href="{{ url }}" class="text-gray-400 hover:text-white">
              {{ label }}
            </a>
          {% endfor %}
        </nav>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-bold text-lg mb-4">Contact</h3>
        <div class="text-gray-400 space-y-2">
          {% if section.settings.email %}
            <p>
              <a href="mailto:{{ section.settings.email }}" class="hover:text-white">
                {{ section.settings.email }}
              </a>
            </p>
          {% endif %}
          {% if section.settings.phone %}
            <p>{{ section.settings.phone }}</p>
          {% endif %}
        </div>
      </div>
    </div>

    {% dropin 'footer-disclaimer' %}

    <!-- Copyright -->
    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ site.name }}. All rights reserved.</p>
      {% dropin 'social-links' %}
    </div>
  </div>
</footer>

