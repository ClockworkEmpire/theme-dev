{% comment %}
  Homepage template
  Displays a hero section and lists of content from mounted datasets
{% endcomment %}

<div class="container mx-auto px-4 py-12">
  <!-- Hero Section -->
  {% section 'hero' %}

  <!-- Articles Section -->
  {% if datasets.articles.size > 0 %}
  <section class="py-12">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold">Latest Articles</h2>
      <a href="/blog" class="text-blue-600 hover:text-blue-800">View all →</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {% for article in datasets.articles limit: 3 %}
        {% hostnet_render 'article-card', article: article %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Companies Section -->
  {% if datasets.companies.size > 0 %}
  <section class="py-12">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold">Featured Companies</h2>
      <a href="/companies" class="text-blue-600 hover:text-blue-800">View all →</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {% for company in datasets.companies limit: 3 %}
        {% hostnet_render 'company-card', company: company %}
      {% endfor %}
    </div>
  </section>
  {% endif %}
</div>
