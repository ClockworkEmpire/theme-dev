{% comment %}
  Article template - displays a single dataset record
  The variable name matches the dataset alias (singular form)
  Available variables:
    - article: The dataset record
    - mount: Dataset mount info
{% endcomment %}

<article class="container mx-auto px-4 py-12 max-w-3xl">
  <!-- Breadcrumb -->
  <nav class="text-sm text-gray-500 mb-6">
    <a href="/" class="hover:text-blue-600">Home</a>
    <span class="mx-2">/</span>
    <a href="{{ mount.mount_path }}" class="hover:text-blue-600">
      {{ mount.alias | capitalize }}
    </a>
    <span class="mx-2">/</span>
    <span class="text-gray-700">{{ article.title }}</span>
  </nav>

  <!-- Header -->
  <header class="mb-8">
    <h1 class="text-4xl font-bold mb-4">{{ article.title }}</h1>

    <div class="flex items-center text-gray-600 gap-4">
      {% if article.author %}
        <span>By {{ article.author }}</span>
      {% endif %}
      {% if article.published_at %}
        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
          {{ article.published_at | date: '%B %d, %Y' }}
        </time>
      {% endif %}
    </div>
  </header>

  <!-- Featured Image -->
  {% if article.image %}
    <figure class="mb-8">
      <img
        src="{{ article.image | img_url: 'large' }}"
        alt="{{ article.title }}"
        class="w-full rounded-lg shadow-md"
      >
    </figure>
  {% endif %}

  <!-- Content -->
  <div class="prose prose-lg max-w-none">
    {{ article.content }}
  </div>

  <!-- Back Link -->
  <div class="mt-12 pt-8 border-t">
    <a href="{{ mount.mount_path }}" class="text-blue-600 hover:text-blue-800">
      ‚Üê Back to {{ mount.alias }}
    </a>
  </div>
</article>
