{% comment %}
  Header section - Dark navigation bar with logo and CTA

  Schema settings:
    - logo_text: Text logo (used if no logo_image)
    - logo_image: Image logo (takes precedence)
    - cta_text: Call-to-action button text
    - cta_url: Call-to-action button URL
{% endcomment %}

<header class="bg-header">
  <div class="container">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        {% if section.settings.logo_image %}
          <img
            src="{{ section.settings.logo_image | img_url: 'medium' }}"
            alt="{{ section.settings.logo_text | default: site.name }}"
            class="h-8 w-auto"
          >
        {% else %}
          <span class="text-inverse text-xl" style="font-weight: var(--font-weight-bold);">
            {{ section.settings.logo_text | default: site.name }}
          </span>
        {% endif %}
      </a>

      <!-- Navigation Links (desktop) -->
      <div class="hidden md:flex items-center gap-1">
        <a href="/" class="nav-link">Home</a>
        <a href="/businesses" class="nav-link">Browse</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/about" class="nav-link">About</a>
        <a href="/contact" class="nav-link">Contact</a>
      </div>

      <!-- CTA Button -->
      <div class="flex items-center gap-4">
        {% if section.settings.cta_text %}
          <a href="{{ section.settings.cta_url | default: '#' }}" class="btn btn-primary btn-sm">
            {{ section.settings.cta_text }}
          </a>
        {% endif %}

        <!-- Mobile menu button -->
        <button type="button" class="md:hidden nav-link p-2" aria-label="Menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </nav>
  </div>
</header>
