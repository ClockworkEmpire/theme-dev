{% comment %}
  Terms of Use page template.
  Standard terms of service content.
{% endcomment %}

<div class="bg-page">
  {% comment %} Header {% endcomment %}
  <section class="section-sm bg-hero">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="heading-1 text-inverse mb-4">Terms of Use</h1>
        <p class="text-sm" style="color: var(--color-neutral-400);">
          Last updated: {{ 'now' | date: '%B %d, %Y' }}
        </p>
      </div>
    </div>
  </section>

  {% comment %} Content {% endcomment %}
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="card p-8">
          <div class="prose">
            <h2 class="heading-4 mb-4">Acceptance of Terms</h2>
            <p class="text-secondary mb-6" style="line-height: var(--line-height-relaxed);">
              By accessing and using {{ site.name | default: 'this website' }}, you accept and agree to be bound by
              the terms and provisions of this agreement. If you do not agree to these terms, please do not use our services.
