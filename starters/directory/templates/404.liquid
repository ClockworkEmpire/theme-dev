{% comment %}
  404 Not Found template.
  Displayed when a requested page or resource cannot be found.
{% endcomment %}

<div class="bg-page">
  <div class="container section-lg">
    <div class="max-w-xl mx-auto text-center">
      {% comment %} Error illustration {% endcomment %}
      <div class="mb-8" style="color: var(--color-neutral-300);">
        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="mx-auto">
          <circle cx="12" cy="12" r="10"/>
          <path d="M16 16s-1.5-2-4-2-4 2-4 2"/>
          <line x1="9" y1="9" x2="9.01" y2="9"/>
          <line x1="15" y1="9" x2="15.01" y2="9"/>
        </svg>
      </div>

      {% comment %} Error message {% endcomment %}
      <h1 class="heading-1 mb-4">Page Not Found</h1>
      <p class="text-lg text-secondary mb-8">
        Sorry, we couldn't find the page you're looking for. It may have been moved or no longer exists.
      </p>

      {% comment %} Actions {% endcomment %}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/" class="btn btn-primary">
          {% hostnet_render 'icon', name: 'arrow-right' %}
          Back to Home
        </a>
        <a href="/businesses" class="btn btn-secondary">
          Browse Businesses
        </a>
      </div>

      {% comment %} Search suggestion {% endcomment %}
      <div class="mt-12 pt-12" style="border-top: 1px solid var(--color-border);">
        <p class="text-muted mb-4">Or try searching for what you need:</p>
        <div class="max-w-md mx-auto">
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-muted">
              {% hostnet_render 'icon', name: 'search' %}
            </span>
            <input
              type="text"
              placeholder="Search businesses..."
              class="input input-lg w-full"
              style="padding-left: 3rem;"
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
